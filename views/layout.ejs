<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Expense Management System</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <!-- Custom CSS -->
  <style>
    .sidebar {
      min-height: calc(100vh - 56px);
      background-color: #f8f9fa;
    }
    .notification-badge {
      position: absolute;
      top: -5px;
      right: -5px;
      font-size: 0.7rem;
    }
    .receipt-preview {
      max-width: 100%;
      max-height: 300px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="<%= typeof user != 'undefined' ? '/dashboard' : '/' %>">Expense Management</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <% if(typeof user != 'undefined'){ %>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <% if(user && user.role === 'Admin'){ %>
              <li class="nav-item">
                <a class="nav-link" href="/admin/expenses">All Expenses</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/manage">Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/workflows">Workflows</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/company">Company</a>
              </li>
            <% } else if(user && user.role === 'Manager'){ %>
              <li class="nav-item">
                <a class="nav-link" href="/approvals/dashboard">Approvals</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/expenses/dashboard">My Expenses</a>
              </li>
            <% } else if(user && (user.role === 'Financer' || user.role === 'Director')) { %>
              <li class="nav-item">
                <a class="nav-link" href="/approvals/dashboard">Approvals</a>
              </li>
            <% } else if(user) { %>
              <li class="nav-item">
                <a class="nav-link" href="/expenses/dashboard">My Expenses</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/expenses/new">New Expense</a>
              </li>
            <% } %>
          <% } %>
          </ul>
          <ul class="navbar-nav ms-auto">
            <% if (typeof user !== 'undefined' && user) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user"></i> <%= user.name %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/users/logout">Logout</a></li>
              </ul>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/users/login">
                <i class="fas fa-sign-in-alt"></i> Login
              </a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
        </div>
      </div>
    </nav>

  <div class="container mt-4">
    <%- include('./partials/messages') %>
    <%- body %>
  </div>

  <!-- Bootstrap 5 JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>