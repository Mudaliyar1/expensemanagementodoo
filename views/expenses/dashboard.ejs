<h2>My Expenses</h2>

<div class="mb-4">
  <a href="/expenses/new" class="btn btn-primary">
    <i class="fas fa-plus"></i> New Expense
  </a>
</div>

<div class="card">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs" id="expenseTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">Pending</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">Approved</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">Rejected</button>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <div class="tab-content" id="expenseTabContent">
      <!-- Pending Expenses -->
      <div class="tab-pane fade show active" id="pending" role="tabpanel">
        <% if(expenses.filter(e => e.status === 'Pending').length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Category</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% expenses.filter(e => e.status === 'Pending').forEach(function(expense) { %>
                  <tr>
                    <td><%= new Date(expense.date).toLocaleDateString() %></td>
                    <td><%= expense.category %></td>
                    <td><%= expense.amount %> <%= expense.currency %></td>
                    <td><span class="badge bg-warning">Pending</span></td>
                    <td>
                      <a href="/expenses/view/<%= expense._id %>" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> View
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted">No pending expenses found.</p>
        <% } %>
      </div>
      
      <!-- Approved Expenses -->
      <div class="tab-pane fade" id="approved" role="tabpanel">
        <% if(expenses.filter(e => e.status === 'Approved').length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Category</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% expenses.filter(e => e.status === 'Approved').forEach(function(expense) { %>
                  <tr>
                    <td><%= new Date(expense.date).toLocaleDateString() %></td>
                    <td><%= expense.category %></td>
                    <td><%= expense.amount %> <%= expense.currency %></td>
                    <td><span class="badge bg-success">Approved</span></td>
                    <td>
                      <a href="/expenses/view/<%= expense._id %>" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> View
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted">No approved expenses found.</p>
        <% } %>
      </div>
      
      <!-- Rejected Expenses -->
      <div class="tab-pane fade" id="rejected" role="tabpanel">
        <% if(expenses.filter(e => e.status === 'Rejected').length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Category</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% expenses.filter(e => e.status === 'Rejected').forEach(function(expense) { %>
                  <tr>
                    <td><%= new Date(expense.date).toLocaleDateString() %></td>
                    <td><%= expense.category %></td>
                    <td><%= expense.amount %> <%= expense.currency %></td>
                    <td><span class="badge bg-danger">Rejected</span></td>
                    <td>
                      <a href="/expenses/view/<%= expense._id %>" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> View
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted">No rejected expenses found.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>