
<%- include('../partials/messages') %>

<div style="background: #F5F5F5; min-height: 100vh; display: flex; align-items: center; justify-content: center;">
  <div style="background: #fff; padding: 2.5rem 2rem 2rem 2rem; border-radius: 1rem; box-shadow: 0 4px 24px rgba(135,90,123,0.08); width: 100%; max-width: 400px;">
    <h2 style="color: #875A7B; text-align: center; margin-bottom: 2rem; font-weight: 700;">Login</h2>
    <form action="/users/login" method="POST">
      <div style="margin-bottom: 1.5rem;">
        <label for="email" style="display: block; color: #333333; font-weight: 500; margin-bottom: 0.5rem;">Email</label>
        <input type="email" id="email" name="email" required value="<%= typeof email != 'undefined' ? email : '' %>" style="width: 100%; padding: 0.75rem; border: 1px solid #875A7B; border-radius: 0.5rem; background: #F5F5F5; color: #333333; font-size: 1rem;">
      </div>
      <div style="margin-bottom: 1.5rem;">
        <label for="password" style="display: block; color: #333333; font-weight: 500; margin-bottom: 0.5rem;">Password</label>
        <input type="password" id="password" name="password" required style="width: 100%; padding: 0.75rem; border: 1px solid #875A7B; border-radius: 0.5rem; background: #F5F5F5; color: #333333; font-size: 1rem;">
      </div>
      <button type="submit" style="width: 100%; background: #875A7B; color: #fff; border: none; padding: 0.75rem; border-radius: 0.5rem; font-size: 1.1rem; font-weight: 600; cursor: pointer; transition: background 0.2s;">Login</button>
    </form>
    <div style="margin-top: 1.5rem; text-align: center;">
      <a href="/users/forgot-password" style="color: #009EE3; font-weight: 500; text-decoration: none;">Forgot Password?</a>
    </div>
  </div>
</div>